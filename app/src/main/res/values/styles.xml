<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="buttonRow">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="buttonNumber">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_white</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">numberAction</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonOperator">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textSize">25sp</item>
        <item name="android:onClick">operationAction</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="buttonGray">
    <item name="android:layout_weight">1</item>
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">match_parent</item>
    <item name="android:background">@drawable/button_gray</item>
    <item name="android:textSize">25sp</item>
    <item name="android:onClick">operationAction</item>
    <item name="android:textColor">@color/black</item>
    </style>

</resources>